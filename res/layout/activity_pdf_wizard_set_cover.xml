<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выберите обложку"
            android:id="@+id/pdf_wizard_get_cover_choose_cover_button"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Напишите короткую историю"
            android:id="@+id/pdf_wizard_set_short_story_button"
            android:layout_below="@+id/pdf_wizard_get_cover_choose_cover_button"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выбрать фотографии"
            android:id="@+id/pdf_wizard_get_photos_button"
            android:layout_below="@+id/pdf_wizard_set_short_story_button"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Создать документ PDF"
            android:id="@+id/pdf_wizard_create_pdf_button"
            android:layout_below="@+id/pdf_wizard_get_photos_button"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"/>

</RelativeLayout>