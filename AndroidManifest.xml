<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.magic"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="9"
              android:targetSdkVersion="17"
              android:maxSdkVersion="17" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.BubbleActivity"/>
        <activity android:name=".activity.gallery.CustomGallery"/>
        <activity android:name=".pdf.PdfWizardActivity"/>
        <activity android:name=".pdf.PdfWizardShortStory"/>
        <activity android:name=".activity.CutPhotoActivity"/>
        <activity android:name=".activity.FiguresActivity"/>
        <activity android:name=".drawgraphic.FingerPaint"/>
        <activity android:hardwareAccelerated="false" android:name=".activity.DrawingActivity"/>
    </application>

</manifest>
